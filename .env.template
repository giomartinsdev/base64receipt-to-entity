# Environment variables for Receipt Processing Project
# Copy this file to .env and modify as needed

# App settings
DEBUG=True
LOG_LEVEL=INFO

# Receipt directory
RECEIPTS_DIR=src/receipts

# Database settings
DATABASE_URI=sqlite:///app.db

# Model settings
MODEL_NAME=google/gemma-3-1b-it
DEVICE=auto  # 'auto', 'cuda', or 'cpu'

# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Memory management
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True,max_split_size_mb:64
CUDA_VISIBLE_DEVICES=0
